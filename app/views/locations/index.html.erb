<html ng-app="app" lang="en"><head>
<base href="/">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="">

    <title>Maps</title>

     <%= stylesheet_link_tag "bootstrap.min" %>
     <%= stylesheet_link_tag "angular-material.min" %>
     <%= stylesheet_link_tag "leaflet" %>
     <%= stylesheet_link_tag "application" %>

     <link href='https://fonts.googleapis.com/css?family=Great+Vibes|Inconsolata:400,700' rel='stylesheet' type='text/css'>

      <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
          
    <div class="container" ng-controller="MapController as mapCtrl" ng-init="mapCtrl.index()">
    
        <div class="row center-text">
<h1>Maps</h1>

</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h5>
    This map shows the transactions that have location data.  You can filter by the transaction type or by the individual.  The size of the circles correspond to the relative size of the "charge/earning" amount.</h5>
  </div>
</div>
<div class="row">
  <div class="col-md-4 border-pane">
    <h3>Filters</h3>
    <md-divider></md-divider>
 <md-subheader>Transaction Type</md-subheader>
  <md-list>
<md-list-item>
<md-radio-group class="md-primary" ng-model="mapCtrl.defaultTransactionType">
<md-radio-button class="filter-on" value="All">All</md-radio-button>
<md-radio-button class="filter-on" value="Charge">Charge</md-radio-button>
<md-radio-button class="filter-on" value="Earning">Earning</md-radio-button>
</md-radio-group>
</md-list-item>
</md-list>
<md-divider></md-divider>
<md-list>
 <md-list-item>
 <select class="btn dropdown-toggle name-filter">
  <option value="">All Names</option>
 <option ng-repeat="n in mapCtrl.users" value="{{n.name}}">{{n.name}}</option>
</select>
 </md-list-item>
</md-list>

 </div>
 <div class="col-md-8">
    <map id="map" data="mapCtrl.transactions"></map>
 </div>

        </div>
    </div>

    <%= javascript_include_tag "angular/angular.min" %>
    <%= javascript_include_tag "angular/angular-resource.min" %>
    <%= javascript_include_tag "angular/angular-route.min" %>
    <%= javascript_include_tag "ui-bootstrap-tpls-0.13.0.min" %>
    <%= javascript_include_tag "leaflet/leaflet" %>
    <%= javascript_include_tag "leaflet/leaflet-src" %>
    <%= javascript_include_tag "directives/map" %>
    <%= javascript_include_tag "angular/angular-animate.min" %>
    <%= javascript_include_tag "angular/angular-aria.min" %>
    <%= javascript_include_tag "angular/angular-material.min" %>
    <%= javascript_include_tag "app" %>
    <%= javascript_include_tag "directives/map" %>
    <%= javascript_include_tag "controllers/mapCtrl" %>
    <%= javascript_include_tag "services/mapService" %>
    <%= javascript_include_tag "d3/d3.min" %>

</body></html>